<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lgcns.dailyMapper">
     
    <select id="COUNTRY" resultType="LinkedHashMap" parameterType="ArrayList">
		select a.*
		from test a
		where 1=1
			  and
			  a.code in <foreach collection="list" item="item"  open="(" close=")" separator=",">
            				#{item}
        	  			</foreach>			  	
    </select>
         
    <select id="SENDGERP" resultType="LinkedHashMap" parameterType="map">
    <![CDATA[
        select	a.*  	
		from 	test a
		where 	1=1
	]]>
    </select>
    
</mapper>